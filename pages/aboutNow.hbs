<div class="container ">
  <div class="row">
    <div class="col s12 m9 ">{{!Все про фильм}}
      {{#with cont.film}}
      <div class="row">{{!Все без содержания фильма}}
        <div class="col s8 offset-s2 m4 "> {{!Картинка }}
          <div class="card ">
            <div class="card-image">
              <img class="responsive-img" src="Content/img/{{img_name}}" width="280" height="405" alt=" "/>
            </div>
            <div class="card-action">
              <a href="/movie{{video_name}}" target="_blank">Дивитися трейлер</a>
            </div>
          </div>
        </div>
        <div class="col s12 m8">{{!Описание}}
          <div class="row">{{!Название фильма}}
            <div class="col s12 center-align">
              <h3 >{{filmname}}</h3>
            </div>
          </div>
          <div class="row">{{!Атрибуты фильма}}
            <div class="row">
              <div class="col s3 right-align"> <b>Рік:</b> </div>
              <div class="col s9">  {{rik}} </div>
            </div>
            <div class="row">
              <div class="col s3 right-align"> <b>Жанр:</b> </div>
              <div class="col s9"> {{zhanr}}</div>
            </div>
            <div class="row">
              <div class="col s3 right-align"> <b>Режисер:</b> </div>
              <div class="col s9"> {{rezhiser}}</div>
            </div>
            <div class="row">
              <div class="col s3 right-align"> <b>У ролях:</b> </div>
              <div class="col s9"> {{roli}}</div>
            </div>
            <div class="row">
              <div class="col s3 right-align"> <b>Студія:</b> </div>
              <div class="col s9"> {{studia}}</div>
            </div>
            <div class="row">
              <div class="col s3 right-align"> <b>Країна:</b> </div>
              <div class="col s9"> {{kraina}}</div>
            </div>
            <div class="row">
              <div class="col s3 right-align"> <b>Тривалість:</b> </div>
              <div class="col s9"> {{trivalist}}</div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">{{!Содержание фильма}}
        <div class="col s12">
         <i>{{opis}}</i> 
        </div>
      </div>
      {{/with}}
    </div>
    <div class="col s8 offset-s2 m3">{{!Покупка билета}}
      <ul class="collection  ">
        <li class="collection-item">
          <div class="row">
            <div class="col s12 center-align"> <h5>Придбати квітки</h5> </div>
          </div>
          {{#each cont.rasp}}
          <div class="row ">
            <div class="col"> <b>{{date}}, {{month}}</b>  </div>
            <div class="col"> <i>{{weekday}}</i>  </div>
          </div>
          <div class="row">
            {{#each rsp}}
            <div class="col">
              <a href="/ticket{{idr}}?img={{../img}}&date={{../date}}&month={{../month}}&day={{../weekday}}&time={{sns}}">{{sns}}</a> 
            </div>
            {{/each}}
          </div>
          {{/each}}
        </li>
      </ul>
    </div>
  </div>
</div>