<div style="background-color:#f6f1e4 ;">
    <div class="row top ">
        <div class="row"></div>
        <div class="row ">

            <ul class="tabs " style="background-color:#f6f1e4 ;">
                <li class="tab  col s5 offset-s1 m4 offset-m2 l3 offset-l3 xl2 offset-xl4  "><a class="active "
                        href="#login">
                        <h6>Вхід</h6>
                    </a></li>
                <li class="tab col  s5 m4 l3 xl2"><a href="#registr">
                        <h6>Реєстрація</h6>
                    </a></li>
            </ul>
        </div>
        <div class="row"></div>
        <div class="row">
            {{#if error}}
            <p class="center-align" style="color:red ;">{{error}}</p>
            {{/if}}
        </div>
        <div id="login" class="col s12 m8 offset-m2 l6 offset-l3 xl4 offset-xl4 ">

            <form action="/login" method="POST">
                <div class="input-field">
                    <input id="mail" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введіть email"></span>
                </div>
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введіть пароль"></span>
                </div>
                <div class="right-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Увійти
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
        <div id="registr" class="col s12 m8 offset-m2 l6 offset-l3 xl4 offset-xl4">

            <form action="/registr" method="POST">
                <div class="input-field">
                    <input id="rename" name="login" type="text" class="validate" required>
                    <label for="rename">Введіть логін</label>
                    <span class="helper-text" data-error="Введіть логін"></span>
                </div>
                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введіть email"></span>
                </div>
                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Пароль</label>
                    <span class="helper-text" data-error="Введіть пароль"></span>
                </div>
                <div class="right-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Зареєструватись
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>